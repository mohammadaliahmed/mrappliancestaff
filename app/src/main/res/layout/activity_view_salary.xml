<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/salaryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/logopng" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="@drawable/black_corners_colored"
                    android:gravity="center"
                    android:text="Mr Appliance"
                    android:textColor="#000"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/salaryDate"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="@drawable/black_corners"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="11sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:background="@drawable/black_corners_colored"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:text="Name"
                        android:textColor="#000"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="2"
                        android:background="@drawable/black_corners"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:background="@drawable/black_corners_colored"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:text="Phone"
                        android:textColor="#000"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="2"
                        android:background="@drawable/black_corners"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="11sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:background="@drawable/black_corners_colored"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:text="Salary"
                        android:textColor="#000"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/grossSalary"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="2"
                        android:background="@drawable/black_corners"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:background="@drawable/black_corners_colored"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:text="Role"
                        android:textColor="#000"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/role"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="2"
                        android:background="@drawable/black_corners"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="11sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:weightSum="12">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="4"
                        android:background="@drawable/black_corners_colored"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:text="Earnings"
                        android:textColor="#000"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="2"
                        android:background="@drawable/black_corners_colored"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:text="Amount"
                        android:textColor="#000"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="4"
                        android:background="@drawable/black_corners_colored"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:text="Deductions"
                        android:textColor="#000"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="2"
                        android:background="@drawable/black_corners_colored"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:text="Amount"
                        android:textColor="#000"
                        android:textSize="11sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/black_corners"
                    android:orientation="horizontal"
                    android:weightSum="2.01">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerAllowances"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#000" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerDeductions"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="12">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="4"
                        android:background="@drawable/black_corners"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:text="Gross Earnings"
                        android:textColor="#000"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/totalAllowancesTV"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="2"
                        android:background="@drawable/black_corners"
                        android:gravity="center|right"
                        android:paddingRight="5dp"
                        android:text="Amount"
                        android:textColor="#000"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="4"
                        android:background="@drawable/black_corners"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:text="Gross Deductions"
                        android:textColor="@color/colorRed"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/totalDeductionsTv"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="2"
                        android:background="@drawable/black_corners"
                        android:gravity="center|right"
                        android:paddingRight="5dp"
                        android:text="Gross"
                        android:textColor="@color/colorRed"
                        android:textSize="11sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/totalSalary"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="@drawable/black_corners"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="Gross"
                    android:textColor="#000"
                    android:textStyle="bold" />


            </LinearLayout>
        </LinearLayout>


        <Button
            android:id="@+id/printSalary"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_gravity="center"

            android:layout_margin="10dp"
            android:background="@drawable/btn_bg"
            android:inputType="text"
            android:text="Print salary"
            android:textColor="#fff" />
    </LinearLayout>

</ScrollView>